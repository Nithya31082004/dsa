#Given an array, arr of positive integers. Find the third largest element in it. Return -1 if the third largest element is not found.

#python
class Solution:
    def thirdLargest(self,arr):
        # code here
        if len(arr) < 3:
            return -1
        else:
            max1 = max(arr)
            arr.remove(max1)
            max2 = max(arr)
            arr.remove(max2)
            max3 = max(arr)
            return max3

#java
class Solution {
    int thirdLargest(int[] arr) {
        if (arr.length < 3) {
            return -1; // Not enough elements
        }

        int max1 = Integer.MIN_VALUE;
        int max2 = Integer.MIN_VALUE;
        int max3 = Integer.MIN_VALUE;

        for (int num : arr) {
            if (num > max1) {
                max3 = max2;
                max2 = max1;
                max1 = num;
            } else if (num > max2) {
                max3 = max2;
                max2 = num;
            } else if (num > max3) {
                max3 = num;
            }
        }

        return max3;
    }
}
